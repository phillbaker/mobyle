<h2>Uploads</h2>

<%= render :partial => 'jqfu_form', :locals => { :upload => @upload } %>


<table>
  <tr>
		<th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @uploads.each do |upload| %>
  <tr>
		<td><%= upload.name %></td>
		<%#TODO this breaks on polymorphism because file_uploads are nested %>
		<% if upload.instance_of?(Upload) %>
    	<td><%= link_to 'Show', upload %></td>
    	<td><%= link_to 'Edit', edit_upload_path(upload) %></td>
    	<td><%= link_to 'Destroy', upload, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
		<% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Upload', new_upload_path %>
