<h2>Listing users</h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
		<th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
		<td><%= user.email %></td>
    <td><%= link_to 'Details', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

