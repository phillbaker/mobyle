<% @hubs.each do |hub| %>
  <tr>
		<td><%= hub.name %></td>
    <td><%= link_to 'Show', [hub.user, hub] %></td>
    <td><%= link_to 'Edit', edit_user_hub_path(hub.user, hub) %></td>
    <td><%= link_to 'Destroy', [hub.user, hub], :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

