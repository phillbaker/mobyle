<%= simple_form_for([@hub, @group], :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :name %>
		
		<% if @group.parent_id %>
			<%= f.input :parent_id %>
		<% end %>
  </div>

	
	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary' %>
	</div>
<% end %>
